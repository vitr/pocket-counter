{
  "name": "Pocket Counter",
  "description": "Shows number of items in the Pocket's My List.",
  "version": "1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Show Counter",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "https://getpocket.com/"
  ],

  "web_accessible_resources": [
    "auth.html"
  ],

  "manifest_version": 2
}
